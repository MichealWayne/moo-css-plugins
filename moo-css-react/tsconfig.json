{
    "include": ["./src/"],
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src/",
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
              "src/*"
            ]
        },
        "typeRoots": ["./src/types/"]
    }
}